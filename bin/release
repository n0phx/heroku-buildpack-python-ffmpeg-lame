#!/usr/bin/env bash
# bin/release <build-dir>

BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
BUILD_DIR=$1

MANAGE_FILE=$(cd $BUILD_DIR && find . -maxdepth 3 -type f -name 'manage.py' | head -1)
MANAGE_FILE=${MANAGE_FILE:2}

cat <<EOF
---
config_vars:
  PATH: "/usr/local/bin:/usr/bin:/bin:/app/vendor/ffmpeg/bin"
  LD_LIBRARY_PATH: "/app/.heroku/vendor/lib:/usr/local/lib:/usr/lib:/lib:/app/vendor/lame/lib:/app/vendor/ffmpeg/lib"

EOF


if [[ $MANAGE_FILE ]]; then
cat <<EOF

addons:
  shared-database:5mb
EOF
fi
